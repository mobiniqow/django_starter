[Unit]
Description=gunicorn daemon
Requires={{app_socket_name}}.socket
After=network.target


[Service]
User=ubuntu
Group=www-data
WorkingDirectory={{app_url}}
ExecStart={{app_url}}/venv/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/{{app_socket_name}}.sock \
    {{app_name}}.wsgi:application

[Install]
WantedBy=multi-user.target